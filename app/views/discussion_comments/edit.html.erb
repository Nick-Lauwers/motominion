<% provide(:title, "Update Comment") %>

<header class="header-static-gray">
  <%= render 'layouts/header_secondary' %>
</header>

<%= render 'layouts/modal_search' %>

<%= render 'layouts/modal_menu' %>

<%= render 'layouts/contact' %>

<div class="add-content">
  
  <ol class="social-nav">
    
    <li class="hidden-xs">
      <%= link_to "Community Center", 
                  discussions_path, 
                  class: "social-nav-link" %>
    </li>
    
    <% if !@discussion.club_id.nil? %>
      
      <li class="hidden-xs">
        
        <i class="fa fa-angle-right social-nav-separator" 
           aria-hidden="true"></i>
           
        <%= link_to "Car Clubs", clubs_path, class: "social-nav-link" %>
      </li>
      
      <li class="hidden-xs">
        
        <i class="fa fa-angle-right social-nav-separator" 
           aria-hidden="true"></i>
           
        <%= link_to Club.find(@discussion.club_id), 
                    class: "social-nav-link" do %>
          <%= Club.find(@discussion.club_id).name %>
        <% end %>
      </li>
    <% end %>
    
    <li>
      
      <i class="fa fa-angle-left social-nav-separator-mobile visible-xs" 
           aria-hidden="true"></i>
      
      <i class="fa fa-angle-right social-nav-separator hidden-xs" 
         aria-hidden="true"></i>
      
      <%= link_to "Discussion", @discussion, class: "social-nav-link" %>
    </li>
    
    <li class="hidden-xs">
      
      <i class="fa fa-angle-right social-nav-separator" 
         aria-hidden="true"></i>
         
      <span class="social-nav-active">Update Commment</span>
    </li>
  </ol>
  
  <h1 class="add-content-title">Update Comment</h1>
  
  <%= form_for([@discussion, @discussion_comment]) do |f| %>
  
    <%= render 'shared/error_messages', object: f.object %>
    
    <div class="form-group form-group-primary">
      
      <%= f.label :comment, "Update your comment" %> 
      
      <%= f.text_area :comment, 
                      class: "form-control form-control-primary", 
                      rows: 3 %>
    </div>
    
    <div class="row">
      
      <div class="col-md-4">
        
        <%= f.submit "Update", class: "btn btn-add-content" %>
        
        <%= link_to "Cancel", 
                    @discussion, 
                    class: "btn btn-add-content-cancel" %>
      </div>
      
      <div class="col-md-8">
        <!--intentionally left blank-->
      </div>
    </div>
  <% end %>
</div>