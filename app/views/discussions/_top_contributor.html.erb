<%= link_to user_path(top_contributor), 
            class: "top-contributor-link" do %>
  <li id="top-contributor-item-<%= top_contributor.id %>" 
      class="top-contributor-item">
    <div class="row vertical-align">
      
      <div class="col-xs-3 avatar-and-online">
        
        <div class="top-contributor-avatar avatar-general", 
             style="background-image: url(
                     '<%= top_contributor.avatar.url(:thumb) %>')">
        </div>
        
        <% if top_contributor.online? %>
          <div class="online online-md-tertiary"></div>
        <% end %>
      </div>
      
      <div class="col-xs-9">
        
        <span class="top-contributor-name">
          <%= top_contributor.full_name %>
        </span>
        
        <div class="top-contributor-stats">
          <%= top_contributor.discussions.sum(:cached_votes_up) %> 
          <i class="fa fa-thumbs-o-up stats-icon" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </li>
<% end %>