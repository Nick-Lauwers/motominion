<% provide(:title, "Inbox") %>

<header class="header-static-gray">
  <%= render 'layouts/header_secondary' %>
</header>

<%= render 'layouts/modal_search' %>

<%= render 'layouts/modal_menu' %>

<%= render 'layouts/contact' %>

<%= render 'layouts/hero_backend' %>

<%= render 'layouts/secondary_navbar' %>

<div class="backend">
  <div class="backend-content">
    <div class="row">
    
      <div class="col-md-4 sidenav"> 
        <%= render 'layouts/sidenav_inbox' %>
      </div>
      
      <div class="col-md-8">
        <% if @questions.exists? %>
          <ol class="backend-list">
            <%= render partial:    "backend_question", 
                       collection: @questions, 
                       as:         :question %>
          </ol>
        
        <% else %>
          <!--<div class="empty-list">-->
          
          <!--  <i class="fa fa-comments-o fa-4x empty-list-icon" -->
          <!--     aria-hidden="true"></i>-->
               
            <p class="empty-list-info">
              You have not received any questions.
            </p>
          <!--</div>-->
        <% end %>
      </div>
    </div>
  </div>
</div>