<li id="order-item-<%= order.id %>" 
    class="col-md-6 order-item">
  <%= link_to order_purchase_path(order) do %>

    <div class="order-item-content">
      
      <div class="order-item-image", 
           style="background-image: url('<%= 
                   order.buyer.avatar.url() %>')">
      </div>
      
      <div class="order-item-detail">
        
        <span class="order-item-name">
          <%= order.buyer.full_name %>
        </span>
        
        <span class="order-item-date">
          Order received <%= time_ago_in_words(order.processed_at) %> ago
        </span>
      </div>
    </div>
  <% end %>
</li>