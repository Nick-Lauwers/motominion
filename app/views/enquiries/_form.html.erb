<%= form_for @enquiry, :html => { multipart: true }  do |f| %>

  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="row">
    
    <div class="col-md-6 form-group">

      <%= f.label :name %>
      
      <div class="form-element">
        <%= f.text_field :name, 
                         placeholder: "Name", 
                         class: "form-control form-control-primary" %>
      </div>
    </div>
    
    <div class="col-md-6 form-group">

      <%= f.label :email, "Email Address" %>
      
      <div class="form-element">
        <%= f.text_field :email, 
                         placeholder: "Email address", 
                         class: "form-control form-control-primary" %>
      </div>
    </div>
  </div>
  
  <div class="row">
    
    <div class="col-md-6 form-group">

      <%= f.label :phone_number, "Phone Number" %>
      
      <div class="form-element">
        <%= f.text_field :phone_number, 
                         placeholder: "Phone number (optional)", 
                         class: "form-control form-control-primary" %>
      </div>
    </div>
    
    <div class="col-md-6 form-group">

      <%= f.label :category, "Reason" %>
      
      <div class="form-element">
        
        <%= f.select :category, 
                     [ "List your vehicle", "Join one of our events", 
                       "Need help purchasing", "Other"],
                     { include_blank: true, prompt: "How can we help?" }, 
                     class: "form-control select-primary" %>
            
        <i class="fa fa-info-circle fa-lg form-icon" 
           aria-hidden="true"></i>
                 
        <i class="fa fa-caret-down fa-lg form-caret" 
           aria-hidden="true"></i>
      </div>
    </div>
  </div>

  <div class="form-group">
  
    <%= f.label :content, "Question or Message" %>
    
    <div class="form-element">
      <%= f.text_area :content, 
                      rows: 2,
                      placeholder: "Question or message", 
                      class: "form-control form-control-primary" %>
    </div>
  </div>
  
  <%= f.submit "Send Message", class: "submit btn btn-primary" %>
<% end %>