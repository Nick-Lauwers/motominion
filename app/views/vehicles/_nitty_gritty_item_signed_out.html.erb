<li class="test-drive-sidenav-item">

  <%= ff.hidden_field :recipient_id,        value: dealer.id %>
  
  <%= ff.hidden_field :next_contributor_id, value: dealer.id %>
  
  <%= button_tag(class: "nitty-gritty-button") do %>
    <div class="row vertical-align">
      
      <div class="col-xs-4 avatar-and-online">
        
        <div class="test-drive-sidenav-avatar avatar-general",
             style="background-image: url(
                     '<%= dealer.avatar.url(:thumb) %>')">
        </div>
        
        <!--<(perc) if @vehicle.user.online? %>-->
        <!--  <div class="online online-lg-primary hidden-xs"></div>-->
        <!--<(perc) end %>-->
      </div>
      
      <div class="col-xs-8 nitty-gritty-button-detail">

        <span class="test-drive-sidenav-name">
          <%= dealer.full_name %>
        </span>
                    
        <span class="average-rating"></span>
        
        <!--<span class="test-drive-sidenav-reviews">-->
        <!--   Â· <(perc)= pluralize(@vehicle.reviews.count, "review") %>-->
        <!--</span>-->
      </div>
    </div>
  <% end %>
</li>

<script type="text/javascript">
  $(document).ready(function() {
    
    // rating
    
      var averageRating = $('.average-rating');
      
      averageRating.raty({
        path:     '/assets',
        readOnly: true,
        score:    <%= @vehicle.dealership.google_place_rating %>
      });
  });
</script>