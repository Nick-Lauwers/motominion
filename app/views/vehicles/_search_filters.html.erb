<%= form_tag search_vehicles_path, 
             method: :get do %>
        
  <%= hidden_field_tag :vehicle_make_id,  params[:vehicle][:vehicle_make_id] %>
  
  <%= hidden_field_tag :vehicle_model_id, params[:vehicle][:vehicle_model_id] %>
  
  <%= hidden_field_tag :city,             params[:city] %>

  <div class="slider-filters">
    
    <div class="row">
      
      <div class="col-md-4 year">
        <div class="form-group form-group-primary">
          
          <%= label_tag :year_gteq, "Earliest Year" %>
          
          <span id="year_slider_val" class="slider-label">1900</span>
          
          <%= text_field_tag :year_gteq, 
                             nil,
                             id: 'year_slider', 
                             type: 'text',
                             data: { 'slider-min'   => '1900',
                                     'slider-max'   => '2016',
                                     'slider-step'  => '1',
                                     'slider-value' => '1900' } %>
              <!--:onChange => "javascript: this.form.commit.click()" %>-->
        </div>
      </div>
      
      <div class="col-md-4 price">
        <div class="form-group form-group-primary">
          
          <%= label_tag :price_lteq, "Max Price" %>
          
          <span id="price_slider_val" class="slider-label">
            $200000
          </span>
          
          <%= text_field_tag :price_lteq, 
                             nil,
                             id: 'price_slider', 
                             type: 'text',
                             data: { 'slider-min'   => '0',
                                     'slider-max'   => '200000',
                                     'slider-step'  => '1',
                                     'slider-value' => '200000' } %>
              <!--:onchange => "javascript: this.form.commit.click()" %>-->
        </div>
      </div>
      
      <div class="col-md-4 mileage">
        <div class="form-group form-group-primary">
          
          <%= label_tag :mileage_lteq, "Max Mileage" %>
          
          <span id="mileage_slider_val" class="slider-label">
            300000 km
          </span>
          
          <%= text_field_tag :mileage_lteq,
                             nil,
                             id: 'mileage_slider', 
                             type: 'text',
                             data: { 'slider-min'   => '0',
                                     'slider-max'   => '300000',
                                     'slider-step'  => '1',
                                     'slider-value' => '300000' } %>
              <!--:onchange => "javascript: this.form.commit.click()" %>-->
        </div>
      </div>
    </div>
    
    <div class="row">
      
      <div class="col-md-4 engine-size">
        <div class="form-group form-group-primary">
          
          <%= label_tag :engine_size_gteq, "Min Engine Size" %>
          
          <span id="engine_size_slider_val" class="slider-label">
            50 cc
          </span>
          
          <%= text_field_tag :engine_size_gteq,
                             nil,
                             id: 'engine_size_slider', 
                             type: 'text',
                             data: { 'slider-min'   => '50',
                                     'slider-max'   => '1500',
                                     'slider-step'  => '1',
                                     'slider-value' => '50' } %>
              <!--:onchange => "javascript: this.form.commit.click()" %>-->
        </div>
      </div>
      
      <div class="col-md-4">
        <!--intentionally left empty-->
      </div>
      
      <div class="col-md-4">
        <!--intentionally left empty-->
      </div>
    </div>
  </div>
  
  <div class="dropdown-filters">
    <div class="row">
      
      <!--<div class="col-md-4 vehicle-condition">-->
      <!--  <h4 class="vehicle-condition-title">Vehicle Condition</h4>-->
      <!--  <ul class="vehicle-condition-list">-->
      <!--    <li>-->
      <!--      <(perc)= radio_button_tag 'q[vehicle_condition_eq]', 'new', false, -->
      <!--          :onclick => "javascript: this.form.commit.click()" (perc)>-->
      <!--      <(perc)= label_tag(:q_vehicle_condition_eq_new, "New", :value => 'New') %>-->
      <!--    </li>-->
      <!--    <li>-->
      <!--      <(perc)= radio_button_tag 'q[vehicle_condition_eq]', 'old', false, -->
      <!--          :onclick => "javascript: this.form.commit.click()" (perc)>-->
      <!--      <(perc)= label_tag(:q_vehicle_condition_eq_old, "Old", :value => 'Old') %>-->
      <!--    </li>-->
      <!--  </ul>-->
      <!--</div>-->
      
      <div class="col-md-4 body-style">
        <div class="form-group form-group-primary">
          
          <%= label_tag :body_style_eq, "Style and Engine" %>
          
          <div class="form-element">
            
            <%= select_tag :body_style_eq, 
                           options_for_select(["Classic / Vintage", "Cruiser", 
                             "Dual-Sport", "Mini / Pocket", "Moped", 
                             "Sportbike", "Standard", "Touring", "Trike"]),
                           prompt: "Body style",
                           class: "form-control select-primary" %>
                <!--:onChange => "javascript: this.form.commit.click()" %>-->
                
            <i class="fa fa-car fa-lg form-icon" 
               aria-hidden="true"></i>
               
            <i class="fa fa-caret-down fa-lg form-caret" 
               aria-hidden="true"></i>
          </div>
        </div>
      </div>
      
      <div class="col-md-4 color">
        <div class="form-group form-group-primary">
          
          <%= label_tag :color_eq, "&nbsp;".html_safe %>
          
          <div class="form-element">
            
            <%= select_tag :color_eq, 
                           options_for_select(["Black", "Blue", "Brown", "Gold", 
                             "Gray", "Green", "Orange", "Pink", "Purple", "Red", 
                             "Silver", "Teal", "Unknown", "White", "Yellow"]),
                           prompt: "Color", 
                           class: "form-control select-primary" %>
                <!--:onChange => "javascript: this.form.commit.click()" %>-->
                
            <i class="fa fa-paint-brush fa-lg form-icon" 
               aria-hidden="true"></i>
             
            <i class="fa fa-caret-down fa-lg form-caret" 
               aria-hidden="true"></i>
          </div>
        </div>
      </div>
      
      <div class="col-md-4 engine-type">
        <div class="form-group form-group-primary">
          
          <%= label_tag :engine_type_eq, "&nbsp;".html_safe %>
          
          <div class="form-element">
            
            <%= select_tag :engine_type, 
                           options_for_select(["Single", "Parallel-Twin", 
                             "Inline-Three", "Inline-Four", "V-Twin", "V4",
                             "Flat-Twin / Boxer", "L-Twin", "Other"]),
                           prompt: "Engine type",
                           class: "form-control select-primary" %>
                <!--:onChange => "javascript: this.form.commit.click()" %>-->
                
            <i class="fa fa-cogs fa-lg form-icon" 
               aria-hidden="true"></i>
               
            <i class="fa fa-caret-down fa-lg form-caret" 
               aria-hidden="true"></i>
          </div>
        </div>
      </div>
    </div>
  
    <div class="row">
      
      <div class="col-md-4 fuel-type">
        <div class="form-group form-group-primary">
          <div class="form-element">
            
            <%= select_tag :fuel_type_eq, 
                           options_for_select(["Electric", "Gasoline"]),
                           prompt: "Fuel type",
                           class: "form-control select-primary" %>
                <!--:onChange => "javascript: this.form.commit.click()" %>-->
                
            <i class="fa fa-leaf fa-lg form-icon" 
               aria-hidden="true"></i>
               
            <i class="fa fa-caret-down fa-lg form-caret" 
               aria-hidden="true"></i>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <!--intentionally left empty-->
      </div>
      
      <div class="col-md-4">
        <!--intentionally left empty-->
      </div>
    </div>
  </div>
  
  <div class="installed-options checkbox-filters">
    
    <h4 class="installed-options-title">Installed Options</h4>
    
    <ul class="installed-options-list">
      
      <!--<li>-->
      <!--  <(perc)= f.check_box :is_autonomy %>-->
      <!--  <(perc)= f.label :is_autonomy, "Autonomy" %>         -->
      <!--</li>-->
      
      <li>
        <%= check_box_tag :is_cruise_control %>
        <%= label_tag :is_cruise_control, "Cruise Control" %> 
      </li>
      
      <li>
        <%= check_box_tag :is_am_fm %>
        <%= label_tag :is_am_fm, "AM / FM Radio" %> 
      </li>
      
      <li>
        <%= check_box_tag :is_cb_radio %>
        <%= label_tag :is_cb_radio, "CB Radio" %> 
      </li>
      
      <li>
        <%= check_box_tag :is_navigation_system %>
        <%= label_tag :is_navigation_system, "Navigation System" %>
      </li>
      
      <li>
        <%= check_box_tag :is_heated_seats %>
        <%= label_tag :is_heated_seats, "Heated Seats" %> 
      </li>
      
      <li>
        <%= check_box_tag :is_heated_hand_grips %>
        <%= label_tag :is_heated_hand_grips, "Heated Hand Grips" %> 
      </li>
      
      <li>
        <%= check_box_tag :is_alarm_system %>
        <%= label_tag :is_alarm_system, "Alarm System" %>       
      </li>
      
      <li>
        <%= check_box_tag :is_saddlebags %>
        <%= label_tag :is_saddlebags, "Saddlebags" %>          
      </li>
      
      <li>
        <%= check_box_tag :is_trunk %>
        <%= label_tag :is_trunk, "Trunk" %>          
      </li>
      
      <li>
        <%= check_box_tag :is_cycle_cover %>
        <%= label_tag :is_cycle_cover, "Cycle Cover" %>          
      </li>
    </ul>
  </div>
  
  <%= submit_tag "Apply Filters", class: "btn btn-apply-filters" %>
<% end %>

<button class="btn btn-cancel-filters">Cancel</button>
    
<div class="filter-button-filler"></div>