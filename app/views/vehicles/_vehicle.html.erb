<li id="garage-item-<%= vehicle.id %>" class="vehicle-item">
  
  <% if vehicle.sold_at.present? %>
    <div class="ribbon-listing">SOLD</div>
  <% end %>
  
  <div class="row vehicle-item-summary">

    <div class="col-md-4 summary-carousel-container">
      
      <%= link_to vehicle, target: "_blank" do %>
      
        <div id="summary-carousel-<%= vehicle.id %>" 
             class="carousel summary-carousel" 
             data-interval="false">
          
          <div class="carousel-inner">
            
            <div class="item active">
              <img src="<%= vehicle.photos[0].image.url() if 
                            vehicle.photos.length > 0 %>">
            </div>
        
            <div class="item">
              <img src="<%= vehicle.photos[1].image.url() if 
                            vehicle.photos.length > 1 %>">
            </div>
        
            <div class="item">
              <img src="<%= vehicle.photos[2].image.url() if 
                            vehicle.photos.length > 2 %>">
            </div>
            
            <div class="item">
              <img src="<%= vehicle.photos[3].image.url() if 
                            vehicle.photos.length > 3 %>">
            </div>
            
            <div class="item">
              <img src="<%= vehicle.photos[4].image.url() if 
                            vehicle.photos.length > 4 %>">
            </div>
            
            <div class="item">
              <img src="<%= vehicle.photos[5].image.url() if 
                            vehicle.photos.length > 5 %>">
            </div>
            
            <div class="item">
              <img src="<%= vehicle.photos[6].image.url() if 
                            vehicle.photos.length > 6 %>">
            </div>
            
            <div class="item">
              <img src="<%= vehicle.photos[7].image.url() if 
                            vehicle.photos.length > 7 %>">
            </div>
          </div>
        </div>
      <% end %>
      
      <a href="#summary-carousel-<%= vehicle.id %>" data-slide="prev">
        <i class="fa fa-chevron-left fa-2x btn-summary-carousel-left" 
           aria-hidden="true"></i>
      </a>
      
      <a href="#summary-carousel-<%= vehicle.id %>" data-slide="next">
        <i class="fa fa-chevron-right fa-2x btn-summary-carousel-right" 
           aria-hidden="true"></i>
      </a>
    </div>
    
    <div class="col-md-8 summary-detail">
      
      <%= link_to vehicle, 
                  class: "summary-detail-content", 
                  target: "_blank" do %>
        <div>
          <span class="summary-detail-title"><%= vehicle.listing_name %></span>
          <span class="summary-detail-price">$<%= vehicle.actual_price %></span>
        </div>
      <% end %>
        
      <% if vehicle.posted_at.present? %>
        
        <%= link_to vehicle, 
                  class: "summary-detail-content", 
                  target: "_blank" do %>
          <span class="summary-detail-info">
            Posted <%= time_ago_in_words(vehicle.posted_at) %> ago
          </span>
        <% end %>
        
        <table class="summary-detail-link-list">
          
          <tr class="summary-detail-link">
            
            <td>
              <%= link_to bump_vehicle_path(vehicle), method: :put do %>
                <i class="fa fa-hand-pointer-o summary-detail-link-icon" 
                   aria-hidden="true"></i>
              <% end %>
            </td>
            
            <td>
              <%= link_to "Bump", 
                          bump_vehicle_path(vehicle), 
                          method: :put,
                          class: "summary-detail-link-text" %>
            </td>
          </tr>

          <tr class="summary-detail-link">
            
            <td>
              <%= link_to basics_vehicle_path(vehicle) do %>
                <i class="fa fa-pencil-square-o summary-detail-link-icon" 
                   aria-hidden="true"></i>
              <% end %>
            </td>
            
            <td>
              <%= link_to "Update",
                          basics_vehicle_path(vehicle),
                          class: "summary-detail-link-text" %>
            </td>
          </tr>

          <tr class="summary-detail-link">
              
            <td>
              <%= link_to consumer_activity_vehicle_path(vehicle) do %>
                <i class="fa fa-line-chart summary-detail-link-icon" 
                   aria-hidden="true"></i>
              <% end %>
            </td>
            
            <td>
              <%= link_to "Manage Consumer Activity",
                          consumer_activity_vehicle_path(vehicle),
                          class: "summary-detail-link-text" %>
            </td>  
          </tr>

          <% if vehicle.sold_at.present? %>
            <tr class="summary-detail-link">
                
              <td>
                <%= link_to undo_sold_vehicle_path(vehicle), method: :put do %>
                  <i class="fa fa-thumb-tack summary-detail-link-icon" 
                     aria-hidden="true"></i>
                <% end %>
              </td>
              
              <td>
                <%= link_to "Repost",
                            undo_sold_vehicle_path(vehicle),
                            method: :put,
                            class: "summary-detail-link-text" %>
              </td>
            </tr>

          <% else %>
            <tr class="summary-detail-link">
                
              <td>
                <%= link_to sold_vehicle_path(vehicle), method: :put do %>
                  <i class="fa fa-shopping-basket summary-detail-link-icon" 
                     aria-hidden="true"></i>
                <% end %>
              </td>

              <td>
                <%= link_to "Mark As Sold",
                            sold_vehicle_path(vehicle),
                            method: :put,
                            class: "summary-detail-link-text" %>
              </td>
            </tr>
          <% end %>
        </table>
        
      <% else %>
      
        <span class="summary-detail-info">
          Started <%= time_ago_in_words(vehicle.created_at) %> ago
        </span>
        
        <table class="summary-detail-link-list">
          <tr class="summary-detail-link">
              
            <td>
              <%= link_to basics_vehicle_path(vehicle) do %>
                <i class="fa fa-check-square-o summary-detail-link-icon" 
                   aria-hidden="true"></i>
              <% end %>
            </td>
              
            <td>
              <%= link_to "Finish Listing", 
                          basics_vehicle_path(vehicle), 
                          class: "summary-detail-link-text" %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</li>