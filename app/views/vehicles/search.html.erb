            });
            
            if ( $(window).width() > 768 ) { 
              map.fitBounds(bounds, { padding: 100 })
            }
            
            else {
              map.fitBounds(bounds, { padding: 50 })
            };
          },
          
          error: function() {}
        });
      });
  });
</script>

