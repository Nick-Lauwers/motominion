<div class="modal" id="modal-filters" role="dialog">
  
  <div class="modal-filters-header">
    <div class="modal-filters-header-content">
      
      <span class="modal-filters-header-title">Filters</span>
      
      <i class="fa fa-lg fa-times modal-filters-header-close pull-right" 
         aria-hidden="true"></i>
    </div>
  </div>

  <div class="modal-filters-body">
    
    <%= form_for_filterrific @filterrific, 
                             html: 
                             { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
  
      <div class="vehicle-make-and-model-filters">
    
        <div class="row">
          
          <div class="col-md-6">
            <div class="form-group form-group-primary">
              
              <%= f.label :with_vehicle_make_id, "Motorcycle" %>
              
              <div class="form-element"> 
              
                <%= f.collection_select(:with_vehicle_make_id,
                                        VehicleMake.all,
                                        :id,
                                        :name,
                                        { include_blank: true,
                                          prompt: "All makes" },
                                        id: "vehicle-make-modal-filters",
                                        class: "form-control select-secondary") %>
                                                
                <i class="fa fa-caret-down fa-lg form-caret" 
                   aria-hidden="true"></i>
              </div>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="form-group form-group-primary">
              
              <%= f.label :with_vehicle_model_id, 
                          "&nbsp;".html_safe,
                          class: "hidden-xs" %>
              
              <div class="form-element">
                <%= f.grouped_collection_select(:with_vehicle_model_id,
                                                VehicleMake.order(:name),
                                                :vehicle_models,
                                                :name,
                                                :id,
                                                :name,
                                                { include_blank: 'All models' },
                                                id: "vehicle-model-modal-filters",
                                                class: "form-control 
                                                        select-secondary") %>
                                                        
                <i class="fa fa-caret-down fa-lg form-caret" 
                   aria-hidden="true"></i>
              </div>
            </div>
          </div>
        </div>
        
        <div class="row">
          
          <%= f.fields_for :with_distance do |with_distance_fields| %>
          
            <div class="col-md-6">
              <div class="form-group form-group-primary">
                
                <%= f.label :zip_code, "Location" %>
                
                <div class="form-element">
                  
                  <%= with_distance_fields.text_field :zip_code,
                                                      placeholder: "ZIP Code",
                                                      class: "form-control
                                                              form-control-tertiary" %>
                                                              
                  <i class="fa fa-map-pin fa-lg form-icon" 
                     aria-hidden="true"></i>
                </div>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="form-group form-group-primary">
               
                <%= f.label :max_distance, 
                            "&nbsp;".html_safe,
                            class: "hidden-xs" %>
                
                <div class="form-element">
                  
                  <%= with_distance_fields.select :max_distance,
                                                  [ ["10 mi", 10], ["25 mi", 25], 
                                                    ["50 mi", 50], ["75 mi", 75],
                                                    ["100 mi", 100], ["150 mi", 150],
                                                    ["250 mi", 250], ["400 mi", 400] ],
                                                  { include_blank: true,
                                                    prompt: "Nationwide" },
                                                  class: "form-control select-primary" %>
                  
                  <i class="fa fa-bullseye fa-lg form-icon" 
                   aria-hidden="true"></i>
                   
                  <i class="fa fa-caret-down fa-lg form-caret" 
                     aria-hidden="true"></i>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="row">
        
        <div class="col-md-6">
          <div class="form-group form-group-primary">
              
            <%= f.label :with_condition, "Condition" %>
            
            <div class="form-element">
              
              <%= f.select :with_condition, 
                           [ "New", "Pre-Owned" ],
                           { include_blank: true,
                             prompt: "New / Pre-Owned" },
                           class: "form-control select-secondary" %>
                 
              <i class="fa fa-caret-down fa-lg form-caret" 
                 aria-hidden="true"></i>
            </div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="form-group form-group-primary">
              
            <%= f.label :with_dealer, "Seller Type" %>
            
            <div class="form-element">
              
              <%= f.select :with_dealer, 
                           [ "Dealer", "Private" ],
                           { include_blank: true,
                             prompt: "Dealer / Private" },
                           class: "form-control select-secondary" %>
                 
              <i class="fa fa-caret-down fa-lg form-caret" 
                 aria-hidden="true"></i>
            </div>
          </div>
        </div>
      </div>
      
      <div class="slider-filters">
        
        <div class="row">

          <div class="col-md-6 mileage">
            <div class="form-group form-group-primary">
              
              <%= f.label :with_mileage_numeric_lte, "Max Mileage" %>
              
              <span id="mileage_slider_val_modal" class="slider-label">
                <% if @filterrific.with_mileage_numeric_lte.present? %>
                  <%= @filterrific.with_mileage_numeric_lte %> mi
                <% else %>
                  200000 mi
                <% end %>
              </span>
              
              <% if @filterrific.with_mileage_numeric_lte.present? %> 
                <%= f.text_field :with_mileage_numeric_lte,
                                 id: 'mileage_slider_modal', 
                                 type: 'text',
                                 data: { 'slider-min'   => '0',
                                         'slider-max'   => '200000',
                                         'slider-step'  => '1',
                                         'slider-value' => @filterrific.
                                                   with_mileage_numeric_lte } %>
              
              <% else %>
                <%= f.text_field :with_mileage_numeric_lte,
                                 id: 'mileage_slider_modal', 
                                 type: 'text',
                                 data: { 'slider-min'   => '0',
                                         'slider-max'   => '200000',
                                         'slider-step'  => '1',
                                         'slider-value' => '200000' } %>
              <% end %>
            </div>
          </div>
          
          <div class="col-md-6 price">
            <div class="form-group form-group-primary">
              
              <%= f.label :with_actual_price_lte, "Max Price" %>
              
              <span id="price_slider_val_modal" class="slider-label">
                <% if @filterrific.with_actual_price_lte.present? %>
                  $<%= @filterrific.with_actual_price_lte %>
                <% else %>
                  $50000
                <% end %>
              </span>
              
              <% if @filterrific.with_actual_price_lte.present? %> 
                <%= f.text_field :with_actual_price_lte, 
                                 id: 'price_slider_modal', 
                                 type: 'text',
                                 data: { 'slider-min'   => '0',
                                         'slider-max'   => '50000',
                                         'slider-step'  => '1',
                                         'slider-value' => @filterrific.
                                                      with_actual_price_lte } %>
              
              <% else %>
                <%= f.text_field :with_actual_price_lte, 
                                 id: 'price_slider_modal', 
                                 type: 'text',
                                 data: { 'slider-min'   => '0',
                                         'slider-max'   => '50000',
                                         'slider-step'  => '1',
                                         'slider-value' => '50000' } %>
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="row">
      
          <div class="col-md-6 year">
            <div class="form-group form-group-primary">
              
              <%= f.label :with_year_gte, "Earliest Year" %>
              
              <span id="year_slider_val_modal" class="slider-label">
                <% if @filterrific.with_year_gte.present? %>
                  <%= @filterrific.with_year_gte %>
                <% else %>
                  1990
                <% end %>
              </span>
              
              <% if @filterrific.with_year_gte.present? %> 
                <%= f.text_field :with_year_gte, 
                                 id: 'year_slider_modal', 
                                 type: 'text',
                                 data: { 'slider-min'   => '1900',
                                         'slider-max'   => '2016',
                                         'slider-step'  => '1',
                                         'slider-value' => @filterrific.
                                                           with_year_gte } %>
              
              <% else %>
                <%= f.text_field :with_year_gte, 
                                 id: 'year_slider_modal', 
                                 type: 'text',
                                 data: { 'slider-min'   => '1900',
                                         'slider-max'   => '2016',
                                         'slider-step'  => '1',
                                         'slider-value' => '1990' } %>
              <% end %>
            </div>
          </div>
          
          <div class="col-md-6 engine-size">
            <div class="form-group form-group-primary">
              
              <%= f.label :with_engine_size_gte, "Min Engine Size" %>
              
              <span id="engine_size_slider_val_modal" class="slider-label">
                <% if @filterrific.with_engine_size_gte.present? %>
                  <%= @filterrific.with_engine_size_gte %> cc
                <% else %>
                  50 cc
                <% end %>
              </span>
              
              <% if @filterrific.with_engine_size_gte.present? %>
                <%= f.text_field :with_engine_size_gte,
                                 id: 'engine_size_slider_modal', 
                                 type: 'text',
                                 data: { 'slider-min'   => '50',
                                         'slider-max'   => '2294',
                                         'slider-step'  => '1',
                                         'slider-value' => @filterrific.
                                                       with_engine_size_gte } %>
              
              <% else %>
                <%= f.text_field :with_engine_size_gte,
                                 id: 'engine_size_slider_modal', 
                                 type: 'text',
                                 data: { 'slider-min'   => '50',
                                         'slider-max'   => '2294',
                                         'slider-step'  => '1',
                                         'slider-value' => '50' } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="dropdown-filters">
    
        <div class="row">
          
          <div class="col-md-6 body-style">
            <div class="form-group form-group-primary">
              
              <%= f.label :with_body_style, "Style and Engine" %>
              
              <div class="form-element">
                
                <%= f.select :with_body_style, 
                             [ "Cafe Racer", "Cruiser", 
                               "Dirt Bike / Dual-Sport", "Mini / Pocket", 
                               "Moped", "Sportbike", "Standard", "Touring", 
                               "Trike" ],
                             { include_blank: true,
                               prompt: "Body style" },
                             class: "form-control select-primary" %>
                    
                <i class="fa fa-motorcycle fa-lg form-icon" 
                   aria-hidden="true"></i>
                   
                <i class="fa fa-caret-down fa-lg form-caret" 
                   aria-hidden="true"></i>
              </div>
            </div>
          </div>
          
          <div class="col-md-6 color">
            <div class="form-group form-group-primary">
              
              <%= f.label :with_color, 
                          "&nbsp;".html_safe,
                          class: "hidden-xs" %>
              
              <div class="form-element">
                
                <%= f.select :with_color, 
                             [ "Black", "Blue", "Brown", "Gold", "Gray", "Green", 
                               "Orange", "Pink", "Purple", "Red", "Silver", "Teal", 
                               "Unknown", "White", "Yellow" ],
                             { include_blank: true,
                               prompt: "Color" },
                             class: "form-control select-primary" %>
    
                <i class="fa fa-paint-brush fa-lg form-icon" 
                   aria-hidden="true"></i>
                 
                <i class="fa fa-caret-down fa-lg form-caret" 
                   aria-hidden="true"></i>
              </div>
            </div>
          </div>
        </div>
        
        <div class="row">
           
          <div class="col-md-6 engine-type">
            <div class="form-group form-group-primary">
              
              <div class="form-element">
                
                <%= f.select :with_engine_type, 
                             [ "Single", "Parallel-Twin", "Inline-Three",
                               "Inline-Four", "V-Twin", "V4", "Flat-Twin / Boxer", 
                               "L-Twin", "Other", "Unknown" ],
                             { include_blank: true,
                               prompt: "Engine type" },
                             class: "form-control select-primary" %>
    
                <i class="fa fa-cogs fa-lg form-icon" 
                   aria-hidden="true"></i>
                 
                <i class="fa fa-caret-down fa-lg form-caret" 
                   aria-hidden="true"></i>
              </div>
            </div>
          </div>
    
          <div class="col-md-6 fuel-type">
            <div class="form-group form-group-primary">
              <div class="form-element">
                
                <%= f.select :with_fuel_type, 
                             [ "Electric", "Gasoline" ],
                             { include_blank: true,
                               prompt: "Fuel type" },
                             class: "form-control select-primary" %>
    
                <i class="fa fa-leaf fa-lg form-icon" 
                   aria-hidden="true"></i>
                   
                <i class="fa fa-caret-down fa-lg form-caret" 
                   aria-hidden="true"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="installed-options checkbox-filters">
        
        <h4 class="installed-options-title">Installed Options</h4>
        
        <div class="row">
      
          <div class="col-md-4 installed-option">
            <%= f.check_box :with_cruise_control %>
            <%= f.label :with_cruise_control, "Cruise Control" %> 
          </div>
          
          <div class="col-md-4 installed-option">
            <%= f.check_box :with_am_fm %>
            <%= f.label :with_am_fm, "AM / FM Radio" %> 
          </div>
          
          <div class="col-md-4 installed-option">
            <%= f.check_box :with_cb_radio %>
            <%= f.label :with_cb_radio, "CB Radio" %> 
          </div>
        </div>
        
        <div class="row"> 
        
          <div class="col-md-4 installed-option">
            <%= f.check_box :with_navigation_system %>
            <%= f.label :with_navigation_system, "Navigation System" %>
          </div>
          
          <div class="col-md-4 installed-option">
            <%= f.check_box :with_heated_seats %>
            <%= f.label :with_heated_seats, "Heated Seats" %> 
          </div>
          
          <div class="col-md-4 installed-option">
            <%= f.check_box :with_heated_hand_grips %>
            <%= f.label :with_heated_hand_grips, "Heated Hand Grips" %> 
          </div>
        </div> 
        
        <div class="row">
            
          <div class="col-md-4 installed-option">
            <%= f.check_box :with_alarm_system %>
            <%= f.label :with_alarm_system, "Alarm System" %>       
          </div>
          
          <div class="col-md-4 installed-option">
            <%= f.check_box :with_saddlebags %>
            <%= f.label :with_saddlebags, "Saddlebags" %>          
          </div>
          
          <div class="col-md-4 installed-option">
            <%= f.check_box :with_trunk %>
            <%= f.label :with_trunk, "Trunk" %> 
          </div>
        </div>
        
        <div class="row">
          
          <div class="col-md-4 installed-option">
            <%= f.check_box :with_tow_hitch %>
            <%= f.label :with_tow_hitch, "Tow Hitch" %>
          </div>
          
          <div class="col-md-4 installed-option">
            <%= f.check_box :with_cycle_cover %>
            <%= f.label :with_cycle_cover, "Cycle Cover" %> 
          </div>
          
          <div class="col-md-4">
            <!--intentionally left empty-->
          </div>
        </div> 
      </div>
      
      <div class="modal-filters-button-container">
        <%= f.submit "Apply", class: "btn btn-modal-filters" %>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  
  $(document).ready(function() {
  
    // dependent dropdown
      
      var vehicleModelModalFilters    = $('#vehicle-model-modal-filters');
      var vehicleMakeModalFilters     = $('#vehicle-make-modal-filters');
      var vehicle_model_modal_filters = vehicleModelModalFilters.html();
  
      if ( vehicleMakeModalFilters.val() == '' ) {
        vehicleModelModalFilters.prop("disabled", true);
      }
      
      else {
        
        vehicleMakeModalFilters.prepend("<option value=''>All makes</option>");
                                      
        var vehicle_make_modal_filters = $('#vehicle-make-modal-filters :selected').text();
        var escaped_vehicle_make_modal_filters = 
          vehicle_make_modal_filters.
            replace(/([ #;&,.+*~\':"!^$[\]()=>|\/@])/g, '\\$1');
        var options_modal_filters = 
          $(vehicle_model_modal_filters).
            filter("optgroup[label=" + escaped_vehicle_make_modal_filters + "]").
            html();
        
        if (options_modal_filters) {
          vehicleModelModalFilters.html("<option value=''>All models</option>" +
                                        "<option value=''></option>" +
                                        options_modal_filters);
          vehicleModelModalFilters.prop("disabled", false);
        } 
        
        else {
          vehicleModelModalFilters.empty();
          vehicleModelModalFilters.html("<option value=''>All models</option>");
          vehicleModelModalFilters.prop("disabled", true);
        }
      }
      
      vehicleMakeModalFilters.change(function() {
        
        var vehicle_make_modal_filters = $('#vehicle-make-modal-filters :selected').text();
        var escaped_vehicle_make_modal_filters = 
          vehicle_make_modal_filters.
            replace(/([ #;&,.+*~\':"!^$[\]()=>|\/@])/g, '\\$1');
        var options_modal_filters = 
          $(vehicle_model_modal_filters).
            filter("optgroup[label=" + escaped_vehicle_make_modal_filters + "]").
            html();
        
        if (options_modal_filters) {
          vehicleModelModalFilters.html("<option value=''>All models</option>" +
                                         "<option value=''></option>" +
                                         options_modal_filters);
          vehicleModelModalFilters.prop("disabled", false);
        } 
        
        else {
          vehicleModelModalFilters.empty();
          vehicleModelModalFilters.html("<option value=''>All models</option>");
          vehicleModelModalFilters.prop("disabled", true);
        }
      });
  });
</script>