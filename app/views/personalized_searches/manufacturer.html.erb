      <div class="personalized-search-expand">
        <span class="personalized-search-expand-content">
          + More
        </span>
      </div>
        
      <%= hidden_field_tag :redirect_location, 
                           location_personalized_search_path(@personalized_search) %>

      <%= button_tag(type: "submit",
                     class: "next-button manufacturer-button") do %>
    
        <div class="personalized-search-button-text">
          
          <span class="personalized-search-button-title">
            Save
          </span>
          
          <span class="personalized-search-button-subtitle">
            Continue to Location
            <i class="fa fa-angle-right" aria-hidden="true"></i>
          </span>
        </div>
        
